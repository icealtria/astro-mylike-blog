---
interface Props {
  href: string;
  title: string;
  icon: string;
  rel: string;
  platform: string;
}

const { href, icon, rel, platform } = Astro.props;
import { Icon } from "astro-icon";
---

<a class="social-link" href={href} rel={rel} target="_blank">
  <Icon name={icon} />
  <span class="platform">
    {platform}
  </span>
</a>

<style>
  .social-link {
    width: 96px;
    font-size: 0.9rem;
    height: 24px;
    border-radius: 40px;
    font-family: Arial, sans-serif;
    color: black;
    text-decoration: none;
    padding: 0.3rem;
    margin: 5px auto;
    transition: background-color 0.3s;
  }
  .social-link:hover {
    background-color: #eee;
  }

  .social-link svg {
    width: 18px;
    height: 18px;
    margin: 0;
    padding: 0;
  }

  .social-link svg,
  .platform {
    vertical-align: middle;
  }
</style>
