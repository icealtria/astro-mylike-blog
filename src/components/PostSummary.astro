---
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
const { title, description, heroImage, slug, pubDate } = Astro.props;
---

<a class="post-summary" href={`/blog/${slug}/`}>
  <div class="info">
    <div class="post-title">{title}</div>
    <p class="description grow">{description}</p>
    <span class="date text-end">
      <FormattedDate
        date={pubDate}
        lang={"zh"}
        year="2-digit"
        month="2-digit"
        day="2-digit"
      />
    </span>
  </div>
  {
    heroImage && (
      <Image
        src={heroImage}
        class="hero-image"
        width={256}
        alt={title}
        loading={"eager"}
      />
    )
  }
</a>
