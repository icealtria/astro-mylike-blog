---
import { getTagsInfo } from "@/scripts/tags";
const tags = Array.from(getTagsInfo()).sort((a, b) => b[1] - a[1]);
---

<h1>标签</h1>
<div class="tags">
  {
    tags.map(([tag, count]) => (
      <>
        <a class="tag" href={`/tags/${tag}`}>
          {tag}
        </a>
        <span class="count">{count}</span>
      </>
    ))
  }
</div>
<style is:inline>
  .tag {
    transition: background-color 0.3s;
    border-radius: 40px;
    padding: 0 0.5rem;
    font-size: 1.1rem;
    text-decoration: none;
    color: black;
    font-family: Arial, Helvetica, sans-serif;
  }

  .tag:hover {
    background-color: #eeeeee;
  }

  h1 {
    font-size: 1.3rem;
    margin: 0 0 1rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .count {
    display: none;
  }
</style>
