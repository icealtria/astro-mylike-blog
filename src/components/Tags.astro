---
import { getTagsInfo } from "@/scripts/tags";
const tags = Array.from(getTagsInfo()).sort((a, b) => b[1] - a[1]);
---

<div class="tags flex flex-wrap gap-2">
  {
    tags.map(([tag, count]) => (
      <>
        <a
          class="tag inline-block rounded-full py-1 px-3 bg-tertiary-container hover:bg-tertiary-container-hover"
          href={`/tags/${tag}`}
        >
          {tag}
        </a>
        <span class="count hidden">{count}</span>
      </>
    ))
  }
</div>
