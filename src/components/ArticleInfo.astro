    content: " ";
    opacity: 0.1;
    -webkit-opacity: 0.1;
    -moz-opacity: 0.1;
    height: 150px;
    right: -10px;
    top: -35px;
    width: 150px;
    position: absolute;
  }
  .copyright.license a {
    color: black;
  }

  .article-title,
  .meta-title {
    margin-bottom: 0.25rem;
  }
  .link,
  .meta-title {
    font-size: 0.8rem;
  }
  .article-title {
    font-weight: 700;
  }
  .link {
    margin-bottom: 1rem;
  }
  .meta {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
  }
  .meta-item {
    margin-right: 2rem;
  }

  @media screen and (max-width: 800px) {
    .copyright.license:after {
      display: none;
    }
  }
</style>
