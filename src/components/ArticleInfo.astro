---
const { slug, author, title, pubDate, license } = Astro.props;
import FormattedDate from "@components/FormattedDate.astro";
import { SITE } from "@/consts";
const article_url = new URL(SITE.url + "/blog/" + slug);
---

<div class="copyright license">
  <div class="article-title">{title}</div>
  <div class="link">
    <a href={article_url}>{article_url}</a>
  </div>
  <div class="meta">
    <div class="meta-item">
      <div class="meta-title">Author</div>
      <div class="meta-text">
        {author ? author : SITE.author}
      </div>
    </div>
    <div class="meta-item">
      <div class="meta-title">Published on</div>
      <div class="meta-text"><FormattedDate date={pubDate} /></div>
    </div>
    <div class="meta-item">
      <div class="meta-title">License</div>
      <div class="meta-text">
        <a
          href="https://creativecommons.org/licenses/by-nc-sa/4.0/deed.zh"
          target="_blank">CC BY-NC-SA 4.0</a
        >
      </div>
    </div>
  </div>
</div>

<style>
  .copyright.license {
    display: -webkit-box;
    display: -moz-box;
    display: block;
    font-size: 0.95rem;
    line-height: 1.2;
    margin: 2rem 0;
    overflow: hidden;
    padding: 0;
    position: relative;
  }

